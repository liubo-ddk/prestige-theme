{%- if section.settings.enable_bar -%}
  {%- unless section.settings.home_page_only and template != 'index' -%}
    <section
      id="section-{{ section.id }}"
      data-section-id="{{ section.id }}"
      data-section-type="announcement-bar">
      <div class="AnnouncementBar">
        <div class="AnnouncementBar__Wrapper">
          <p class="AnnouncementBar__Content Heading">
            {%- if section.settings.link -%}
              <div class="content-wrapper">
                <a href="{{ section.settings.link }}">{{ section.settings.content | escape }}</a>
              </div>
            {%- else -%}
              <div class="content-wrapper">
                {{ section.settings.content | escape }}
              </div>
            {%- endif -%}
            {%- if section.settings.link2 -%}
              <div class="content-wrapper">
                <a href="{{ section.settings.link2 }}">{{ section.settings.content2 | escape }}</a>
              </div>
            {%- else -%}
              <div class="content-wrapper">
                {{ section.settings.content2 | escape }}
              </div>
            {%- endif -%}
          </p>
        </div>
      </div>
    </section>

    <style>
      #section-{{ section.id }} {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
      }
.AnnouncementBar__Content {
  position: relative;
  width: 100%;
  height: 100%;
  perspective: 1000px;
}

.AnnouncementBar__Content .content-wrapper {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  transition: transform 1s;
}

.AnnouncementBar__Content .content-wrapper:nth-child(1) {
  animation: showContent1 20s infinite;
  transform-origin: center right;
}

.AnnouncementBar__Content .content-wrapper:nth-child(2) {
  animation: showContent2 20s infinite 10s;
  transform-origin: center left;
}

@keyframes showContent1 {
  0%, 49.99% {
    transform: rotateY(0deg);
    opacity: 1;
  }
  50%, 100% {
    transform: rotateY(90deg);
    opacity: 0;
  }
}

@keyframes showContent2 {
  0%, 49.99% {
    transform: rotateY(-90deg);
    opacity: 0;
  }
  50%, 100% {
    transform: rotateY(0deg);
    opacity: 1;
  }
}
    </style>

    <script>
      document.documentElement.style.setProperty('--announcement-bar-height', document.getElementById('shopify-section-announcement').offsetHeight + 'px');
    </script>
  {%- endunless -%}
{%- endif -%}

{% schema %}
  {
    "name": "Announcement bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_bar",
        "label": "Enable bar",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "home_page_only",
        "label": "Home page only",
        "default": false
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#ffffff"
      }, {
        "type": "text",
        "id": "content",
        "label": "Text",
        "default": "Announce something here"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }, {
        "type": "text",
        "id": "content2",
        "label": "Text2",
        "default": "Announce something here"
      }, {
        "type": "url",
        "id": "link2",
        "label": "Link2"
      }
    ]
  }
{% endschema %}