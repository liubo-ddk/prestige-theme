<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="image-slider">
  <div class="ImageSlider">
    <div class="ImageSlider__Wrapper">
      {%- for block in section.blocks -%}
        <div class="ImageSlider__Card">
          <a href="{{ block.settings.link }}">
            <img src="{{ block.settings.image }}" alt="{{ block.settings.text }}">
            <div class="ImageSlider__Text">{{ block.settings.text }}</div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  #section-{{ section.id }} {
    overflow-x: scroll;
    white-space: nowrap;
  }
  .ImageSlider__Wrapper {
    display: flex;
  }
  .ImageSlider__Card {
    display: inline-block;
    margin-right: 10px;
  }
  .ImageSlider__Card img {
    max-width: 100%;
    height: auto;
  }
  .ImageSlider__Text {
    text-align: center;
    margin-top: 5px;
  }
</style>

{% schema %}
{
  "name": "Image Slider",
  "settings": [],
  "blocks": [
    {
      "type": "image_card",
      "name": "Image Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slider"
    }
  ]
}
{% endschema %}