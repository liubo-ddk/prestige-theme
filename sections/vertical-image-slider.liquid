<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="image-slider">
  <div class="ImageSlider">
    <div class="ImageSlider__Wrapper">
      {%- for block in section.blocks -%}
        <div class="ImageSlider__Card">
          <a href="{{ block.settings.link }}">
            <img src="{{ block.settings.image }}" alt="{{ block.settings.text }}">
            <div class="ImageSlider__Text">{{ block.settings.text }}</div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>
{%- capture flickity_config -%}
{
  "wrapAround": true,
  "pageDots": false,
  "setGallerySize": false,
  "prevNextButtons": true,
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}

<section class="Section Section--spacingNormal" data-section-id="{{ section.id }}" data-section-type="instagram">
  {%- if section.settings.subheading != blank or section.settings.title != blank -%}
    <section class="SectionHeader SectionHeader--center">
      <div class="Container">
        {%- if section.settings.subheading != blank -%}
          <h3 class="Section__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="Section__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
      </div>
    </section>
  {%- endif -%}

  <div class="Instafeed Carousel Carousel--fixed" data-flickity-config='{{ flickity_config }}'>
    {%- for block in section.blocks -%}
      <div class="Carousel__Cell Instafeed__Cell">
        <a href="#" class="Instafeed__Link PlaceholderBackground">
          {{ 'image' | placeholder_svg_tag: 'Instafeed__Image PlaceholderBackground__Svg PlaceholderSvg--dark' }}
        </a>
      </div>
    {%- endfor -%}
  </div>
</section>

<style>
  #section-{{ section.id }} {
    overflow-x: scroll;
    white-space: nowrap;
  }
  .ImageSlider__Wrapper {
    display: flex;
  }
  .ImageSlider__Card {
    display: inline-block;
    margin-right: 10px;
    text-align: center;
  }
  .ImageSlider__Card img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }
  .ImageSlider__Text {
    margin-top: 5px;
    color: #333;
  }
  .ImageSlider__Card a {
    text-decoration: none;
    color: inherit;
  }
  .ImageSlider__Card a:hover .ImageSlider__Text {
    text-decoration: underline;
  }
</style>

{% schema %}
{
  "name": "Vertical Image Slider",
  "settings": [],
  "blocks": [
    {
      "type": "image_card",
      "name": "Image Card",
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "label": "Sub-heading",
          "default": "@YourStore"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Follow us"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vertical Image Slider"
    }
  ]
}
{% endschema %}